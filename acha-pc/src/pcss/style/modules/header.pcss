/* mobile */
header {
    position: relative;
    z-index: 100;

    & .sticky-wrapper {
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;

        & .gnb {
            width: 100%;
            min-width: auto;
            padding-right: 26px;
            border-bottom: 1px solid rgba(255, 255, 255, .2);

            & h1 {
                display: block;
                position: absolute;
                margin-bottom: 0;
                width: 60px;
                height: 26px;
                top: 17px;
                left: 28px;

                & .logo {
                    position: relative;
                    display: block;
                    background-image: url("../../img/common/logo_w_m_320.png");
                    background-size: contain;
                    background-repeat: no-repeat;
                    width: 100%;
                    height: 100%;
                    z-index: 10;
                }
            }

            & ul {
                position: relative;
                height: 60px;

                & li {
                    &:first-child {
                        display: none;

                        & a {
                            display: block;
                        }
                    }

                    &:nth-child(2) {
                        position: absolute;
                        right: 0;
                        line-height: 60px;

                        & a {
                            display: block;
                            width: 100%;
                            height: 100%;
                            font-size: 14px;
                            letter-spacing: -.35px;
                            color: #fff;
                            line-height: 60px;

                            & i {
                                position: relative;
                                display: inline-block;
                                vertical-align: middle;
                                margin-left: 2px;
                                bottom: 1px;
                                line-height: 10px;

                                &.i-copy-w {
                                    width: 17px;
                                    height: 17px;
                                }

                                &.i-copy-b {
                                    display: none;
                                    width: 17px;
                                    height: 17px;
                                }

                                &.gnb_arrow_white {
                                    display: none;
                                }

                                &.gnb_arrow_black {
                                    display: none;
                                }

                                & img {
                                    width: 100%;
                                    height: 100%;
                                }
                            }
                        }
                    }
                }
            }
        }

        &.is-sticky {
            & .gnb {
                background: #ffffff;
                border-bottom: 1px solid rgba(0, 0, 0, .1);
                left: 50%;
                transform: translateX(-50%);

                & h1 {
                    & .logo {
                        background-image: url("../../img/common/logo_m_320@2x.png");
                    }
                }

                & ul {
                    & li {
                        &:first-child {
                            display: none;
                        }

                        &:nth-child(2) {
                            & a {
                                color: #000000;

                                & i {
                                    &.i-copy-w {
                                        display: none;
                                    }

                                    &.i-copy-b {
                                        display: inline-block;
                                    }

                                    &.gnb_arrow_white {
                                        display: none;
                                    }

                                    &.gnb_arrow_black {
                                        display: none;
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    &.fixed {
        & .sticky-wrapper {
            & .gnb {
                background-color: #fff;

                & h1 {
                    & .logo {
                        background-image: url(../../img/common/logo_m_320@2x.png);
                    }
                }

                & ul {
                    & li {
                        &:nth-child(2) {
                            & a {
                                color: #000;

                                & i {
                                    &.i-copy-w {
                                        display: none;
                                    }

                                    &.i-copy-b {
                                        display: inline-block;
                                    }
                                }
                            }
                        }
                    }
                }
            }

            &.is-sticky {
                & .gnb {
                    background-color: #fff;
                }
            }
        }
    }
}

/* tablet */
@media (min-width: 767px) {
