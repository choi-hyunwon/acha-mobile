/* section 공통 */
.section {
    position: relative;
    & .inner {
        padding-top: 80px;
        position: relative;
        & .txt-area {
            text-align: center;
            & .txt-lg {
                font-size: 22px;
                font-family: var(--font3);
                line-height: 33px;
                color: #191f28;
                text-align: center;
                margin-bottom: 0;
                & span{
                    display: inline;
                }
            }
            & .desc {
                font-family: var(--font5);
                font-size: 16px;
                font-weight: 300;
                line-height: 22px;
                letter-spacing: -0.38px;
                color: #45444a;
                padding-top: 10px;
                margin-top: 0;
                & span{
                    display: inline-block;
                }
            }
        }
    }
}
/* tablet */
@media (min-width: 767px) {
    .section {
        position: relative;
        & .inner {
            padding-top: 120px;
            & .txt-area {
                & .txt-lg {
                    font-size: 40px;
                    line-height: 48px;
                }
                & .desc {
                    font-size: 24px;
                    line-height: 32px;
                }
            }
        }
    }
}
/* pc */
@media (min-width: 1024px) {
    .section {
        width: 100%;
        & .inner {
            padding-top: 130px;
            width: 100%;
            max-width: 1920px;
            margin: 0 auto;
            & .txt-area {
                & .txt-lg {
                    text-align: left;
                    font-size: 56px;
                    line-height: 66px;
                }
                & .desc {
                    font-size: 28px;
                    line-height: 38px;
                    padding-top: 12px;
                    text-align: left;
                }
            }
        }
    }
}



/* 메인 section_main */
.section_main {
    width: 100%;
    height: 700px;
    background-image: url("../../img/main/M-img_visual.png");
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;

    & .inner {
        position: relative;
        width: 100%;
        height: 100%;
        margin: 0 auto;
        padding-top: 60px;
        & .txt-area{
            padding-top: 40px;
            margin-bottom: 460px;
            & .txt-lg{
                color: #ffffff;
                line-height: 28px;
                letter-spacing: 0;
            }
        }
        & .btn_group {
            position: relative;
            display: block;
            padding: 0 28px;
            z-index: 11;

            & ul {
                display: none;
            }

            & .btn-download-app {
                display: block;
                width: 100%;
                height: 60px;
                line-height: 60px;
                border-radius: 10px;
                background-color: #fcd532;
                font-family: var(--font2);
                font-size: 18px;
                text-align: center;
            }
            &.down {
                & .btn-download-app {
                    position: fixed;
                    width: 100%;
                    height: 60px;
                    line-height: 60px;
                    bottom: 0;
                    left: 0;
                    border-radius: 0;
                }
            }
        }
    }
}
/* tablet */
@media (min-width: 767px) {
    .section_main {
        height: 800px;
        background-image: url("../../img/main/T-img_visual.png");
        & .inner {
            padding-top: 90px;
            & .txt-area{
                padding-top: 52px;
                margin-bottom: 440px;
                & .txt-lg{
                    color: #ffffff;
                    line-height: 60px;
                }
            }
            & .btn_group {
                padding: 0 40px;
                & .btn-download-app {
                    height: 80px;
                    line-height: 80px;
                    background-color: #fcd532;
                    font-size: 24px;
                }
                &.down {
                    & .btn-download-app {
                        height: 80px;
                        line-height: 80px;
                    }
                }
            }
        }
    }
}
/* pc */
@media (min-width: 1024px) {
    .section_main {
        height: 1000px;
        background-image: url("../../img/main/P-img_visual.png");
        & .inner {
            width: 1024px;
            margin: 0 auto;
            & .txt-area{
                padding-top: 430px;
