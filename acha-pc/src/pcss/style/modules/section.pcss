

/* section 공통 */
.section {
    position: relative;

    & .inner {
        padding-top: 80px;
        position: relative;

        & .txt-area {
            text-align: center;

            & .txt-lg {
                font-size: 22px;
                font-family: var(--font3);
                line-height: 33px;
                color: #191f28;
                text-align: center;
                margin-bottom: 0;

                & span {
                    display: inline;
                }
                & .dot-top {
                    position: relative;
                    &::before {
                        content: '';
                        position: absolute;
                        top: -2px;
                        left: calc(50% - 2px);
                        width: 4px;
                        height: 4px;
                        border-radius: 50%;
                        background-color: #fff;

                    }
                }
            }

            & .desc {
                font-family: var(--font5);
                opacity: 0.8;
                font-size: 14px;
                letter-spacing: -0.56px;
                text-align: center;
                color: #45444a;
                & span {
                    display: inline-block;
                }
            }

            & .comment {
                font-family: var(--font5);
                font-size: 14px;
                font-weight: 300;
                letter-spacing: -0.35px;
                text-align: center;
                color: #939393;
                margin-top: 22px;
            }

        }
        & .panel {
            padding-top: 50px;
            width: 320px;
            margin: 0 auto;
            & img {
                width: 100%;
                height: auto;
            }
        }
    }
}
.d-pc-block {
    display: none;
}

/* tablet */
@media (min-width: 767px) {
    .d-tablet-none {
        display: none;
    }
    .d-tablet-block {
        display: block;
    }

    .section {
        position: relative;

        & .inner {
            padding-top: 120px;

            & .txt-area {
                & .ico img {
                    width: 39px;
                }
                & .txt-lg {
                    font-size: 36px;
                    line-height: 50px;
                    & .dot-top {
                        &::before {
                            left: calc(50% - 3px);
                            width: 6px;
                            height: 6px;
                        }
                    }
                }

                & .desc {
                    font-size: 20px;
                    line-height: 30px;
                    margin-top: 16px;
                }
                & .comment {
                    font-size: 16px;
                    color: #939393;
                    margin-top: 36px;
                }
            }
        }
    }
}

/* pc */
@media (min-width: 1024px) {

    .section {
        width: 100%;

        & .inner {
            padding-top: 130px;
            width: 1200px;
            margin: 0 auto;

            & .txt-area {
                & .ico img {
                    width: 51px;
                }
                & .txt-lg {
                    text-align: center;
                    font-size: 48px;
                    line-height: 68px;
                    & .dot-top {
                        &::before {
                            left: calc(50% - 5px);
                            width: 10px;
                            height: 10px;
                        }
                    }
                }

                & .desc {
                    font-size: 22px;
                    line-height: 1.64;
                    letter-spacing: -0.55px;
                    text-align: center;
                    color: #45444a;
                }

                & .comment {
                    font-size: 20px;
                    line-height: 44px;
                }
            }
        }
    }

    .d-pc-block {
        display: block !important;
    }
}


/* 메인 section_main */
.section_main_v3 {
    width: 100%;
    height: 700px;
    background-image: url("../../img/main/v3/M-img_visual.png");
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;

    & .inner {
        position: relative;
        width: 100%;
        height: 100%;
        margin: 0 auto;
        padding-top: 60px;

        & .txt-area {
            padding-top: 40px;
