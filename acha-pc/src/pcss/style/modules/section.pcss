/* 지출관리 section_expense */
.section_expense {
    position: relative;
    & .inner {
        & .wrap_tabs {
            position: relative;
            width: 100%;
            margin-bottom: 22px;

            & .panel {
                position: relative;
                z-index: 1;
                width: 100%;
                height: 459px;
                margin: 0 auto;
                &::after{
                    content: '';
                    display: block;
                    z-index: 1;
                    width: 100%;
                    height: 100%;
                    background: url('../../img/main/M-img_expense_phone_basic.png') no-repeat center center / 336px 459px;
                    position: absolute;
                    top: 0;
                }

                &:nth-of-type(1){
                    & .img{
                        background: url("../../img/main/M-img_expense_phone_1_cal.png") no-repeat center 42px / 173px 374px;
                    }
                }
                &:nth-of-type(2){
                    & .img{
                        background: url("../../img/main/M-img_expense_phone_2_cate.png") no-repeat center 42px / 173px 374px;
                    }
                }
                &:nth-of-type(3){
                    & .img{
                        background: url("../../img/main/M-img_expense_phone_3_mon.png") no-repeat center 42px / 173px 374px;
                    }
                }

                & .img {
                    width: 100%;
                    height: 416px; /*374px */
                }
            }

            & .tabs {
                text-align: center;
                margin-bottom: 40px;
                padding-top: 40px;

                & li {
                    display: inline-block;
                    margin-right: 4px;

                    & .btn {
                        padding: 0 20px;
                        border: none;
                        display: block;
                        height: 34px;
                        line-height: 29px;
                        font-size: 16px;
                        color: #6536d1;
                        font-family: var(--font3);
                        & span {
                            display: inline-block;
                            vertical-align: middle;
                        }
                        &:hover, &:focus{
                            box-shadow: none;
                            background: none;
                            color: #6536d1;
                        }
                    }

                    &.on{
                        & .btn{
                            color: #ffffff;
                            background-color: #6536d1;
                        }
                    }
                }
            }
        }
        &.pc-inner{
            display: none;
        }
    }
}
/* tablet */
