        & .sticky-wrapper {
            & .gnb {
                padding-right: 20px;

                & h1 {
                    width: 80px;
                    height: 36px;
                    top: 22px;
                    left: 20px;

                    & .logo {
                        background-image: url("../../img/common/logo_w_m_768@2x.png");
                    }
                }

                & ul {
                    height: 80px;

                    & li {
                        &:nth-child(2) {
                            line-height: 80px;

                            & a {
                                font-size: 16px;
                                line-height: 80px;

                                & i {
                                    line-height: 10px;

                                    &.i-copy-w {
                                        display: none;
                                    }

                                    &.i-copy-b {
                                        display: none;
                                    }

                                    &.gnb_arrow_white {
                                        display: inline-block;
                                        transform: translateY(-1px);
                                    }

                                    &.gnb_arrow_black {
                                        display: none;
                                    }

                                }
                            }
                        }
                    }
                }
            }

            &.is-sticky {
                & h1 {
                    & .logo {
                        background-image: url("../../img/common/logo_m_768@2x.png");
                    }
                }

                & .gnb {
                    & ul {
                        & li {
                            &:first-child {
                                display: none;
                            }

                            &:nth-child(2) {
                                & a {
                                    & i {
                                        &.i-copy-w {
                                            display: none;
                                        }

                                        &.i-copy-b {
                                            display: none;
                                        }

                                        &.gnb_arrow_white {
                                            display: none;
                                        }

                                        &.gnb_arrow_black {
                                            display: inline-block;
                                            transform: translateY(-1px);
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }

        &.fixed {
            & .sticky-wrapper {
                & .gnb {
                    background-color: #fff;

                    & h1 {
                        width: 73px;
                        height: 30px;

                        & .logo {
                            background-image: url(../../img/common/logo_m_320@2x.png);
                        }
                    }

                    & ul {
                        & li {
                            &:nth-child(2) {
                                & a {
                                    color: #000;

                                    & i {
                                        &.gnb_arrow_white {
                                            display: none;
                                        }

                                        &.i-copy-w {
                                            display: none;
                                        }

                                        &.i-copy-b {
                                            display: inline-block;
                                        }

                                        &.gnb_arrow_black {
                                            display: none;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

                &.is-sticky {
                    & .gnb {
                        background-color: #fff;
                    }
                }
            }
        }
    }
}

/* pc */
@media (min-width: 1060px) {
    header {
        & .sticky-wrapper {
            & .gnb {
                width: 100%;
                min-width: 1024px;
                margin: 0 auto;
                padding-right: 0;

                & h1 {
                    display: none;
                }

                & ul {
                    max-width: 1060px;
                    height: 90px;
                    margin: 0 auto;

                    & li:first-child {
                        position: absolute;
                        left: 0;
                        top: 27px;
                        display: none;

                        & a {
                            display: block;
                        }
                    }

                    & li:nth-child(2) {
                        line-height: 90px;

                        & a {
                            line-height: 90px;

                            & i {
                                &.icon-gnb-arrow {
                                    display: none;
                                }
                            }
                        }
                    }
                }
            }

            &.is-sticky {
                & .gnb {
                    & ul {
                        & li:first-child {
                            display: block;
                        }

                        & li:nth-child(2) {
                            & a {
                                & i.gnb_arrow_white {
                                    display: none;
                                }

                                & i.gnb_arrow_black {
                                    position: relative;
                                    display: inline-block;
                                    vertical-align: middle;
                                    margin-left: 5px;
                                    bottom: 1px;
                                }
                            }
                        }
                    }
                }
            }

            &.fixed {
                position: fixed !important;

                & .gnb {
                    transform: none;
                    left: auto;
                }
            }
        }

        & .gnb {
            &.white {
                height: 80px;
                border-bottom: 1px solid rgba(255, 2552, 255, .2);

                & ul {
                    & li:first-child {
                        display: none;
                    }

                    & li:nth-child(2) {
                        & a {
                            color: #fff;

                            & i.gnb_arrow_white {
                                display: inline-block;
                            }

                            & i.gnb_arrow_black {
                                position: relative;
                                display: none;
                                bottom: -1px;
                            }
                        }
                    }
                }
            }
        }

        &.fixed {
            & .sticky-wrapper {
                & .gnb {
                    & h1 {
                        & .logo {
                            background-image: url(../../img/common/logo_m_320@2x.png);
                        }
                    }

                    & ul {
                        & li {
                            &:first-child {
                                display: block;
                            }

                            &:nth-child(2) {
                                & a {
                                    & i {
                                        &.i-copy-b {
                                            display: none;
                                        }

                                        &.gnb_arrow_black {
                                            display: inline-block;
                                            vertical-align: middle;
                                            margin-left: 5px;
                                            bottom: 1px;
                                            transform: translateY(-1px);
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

                &.is-sticky {
                    & .gnb {
                        & ul {
                            & li {
                                &:nth-child(2) {
                                    & a {
                                        & i {
                                            &.i-copy-b {
                                                display: none;
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}


.no-responsive {
    & header {
        width: 100%;
        min-width: 1020px;
        border-bottom: 1px solid rgba(0, 0, 0, .06);

        & .gnb {
            position: relative;
            width: 1020px;
            height: 90px;
            margin: 0 auto;

            & h1.logo {
                display: block;
                position: absolute;
                margin-bottom: 0;
                width: 73px;
                height: 100%;
                top: 0;
                left: 0;

                & a {
                    display: block;
                    width: 100%;
                    height: auto;
                    line-height: 86px;

                    & img {
                        width: 100%;
                        height: 100%;
                    }
                }
            }

            & .btn-copy {
                & a {
                    position: absolute;
                    right: 0;
                    top: 0;
                    display: block;

                    & span {
                        font-size: 16px;
                        line-height: 86px;
                        letter-spacing: -0.4px;
                        text-align: right;
                        vertical-align: middle;
                    }

                    & i {
                        vertical-align: middle;
                        margin-left: 4px;
                    }
                }
            }
        }
    }
}


.gnb-v3 {
    position: relative;
    height: 60px;
    border-bottom: 1px solid #f0f0f0;
    background-color: #fff;

    & > div {
        position: relative;
        width: 100%;

        & .logo {
            position: absolute;
            top: 17px;
            left: 20px;
            width: 92px;

            & a {
                display: block;
                width: 100%;
                height: 100%;

                & img {
                    width: 100%;
                    height: 100%;
                }
            }
        }

        & .menu {
            position: absolute;
            top: 16px;
            right: 17px;

            & .m_close {
                display: none;
            }

            &.active {
                & .m_close {
                    display: block;
                }

                & .m_open {
                    display: none;
                }
            }
        }

        & .nav {
            position: absolute;
            top: 30px;
            right: 0;
            display: none;
        }


    }


    &.active {
        border-bottom: none;
        & .nav {
            display: block;
            position: absolute;
            width: 100%;
            top: 60px;
            left: 0;
            background-color: #fff;
            padding: 20px 20px 5px 20px;
            box-shadow: 0 6px 6px 0 rgba(0, 0, 0, 0.2);
            & li {
                font-size: 17px;
                font-weight: 500;
                line-height: 1.53;
                letter-spacing: -0.85px;
                text-align: center;
                color: #37354e;
                height: 25px;
                margin-bottom: 20px;
                &:hover,
                &.active {
                    & a {
                        color: #6839d3;
                    }
                }
            }
        }
    }
}

@media (min-width: 767px) {
    .gnb-v3 {
        position: relative;
        height: 90px;
        border-bottom: 1px solid #f0f0f0;

