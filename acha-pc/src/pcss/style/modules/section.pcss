                line-height: 36px;

                & span {
                    font-size: 24px;
                    font-weight: bold;
                }
            }

            &.md {
                font-family: var(--font2);
                font-weight: 500;
                line-height: 28px;
                font-size: 20px;
                margin-bottom: 50px;
            }

            &.sm {
                font-size: 15px;
                font-family: var(--font2);
                line-height: 28px;
                margin-bottom: 30px;
                font-weight: 500;
            }
        }

        & > .desc {
            font-size: 15px;
            line-height: 25px;
            letter-spacing: normal;
            text-align: left;
            margin-bottom: 50px;

            &.desc-md {
                font-size: 14px;
            }
        }

        & .s-list {
            & > .title {
                font-family: var(--font2);
                font-size: 18px;
                font-weight: 500;
                line-height: 27px;
                letter-spacing: normal;
                text-align: left;
                margin-bottom: 30px;
            }

            & > .desc {
                font-size: 15px;
                line-height: 25px;
                letter-spacing: normal;
                text-align: left;
                margin-bottom: 30px;
            }

            & .s-item {
                margin-bottom: 50px;

                & li {
                    margin-bottom: 30px;

                    & span {
                        &:first-child {
                            display: inline-block;
                            font-size: 15px;
                            line-height: 22px;
                            letter-spacing: normal;
                            text-align: left;
                            margin-right: 7px;
                            transform: translateY(-2px);
                        }

                        &:nth-child(2) {
                            display: inline-block;
                            font-size: 15px;
                            line-height: 22px;
                            letter-spacing: normal;
                            text-align: left;
                            margin-bottom: 14px;
                        }

                        &:nth-child(3) {
                            display: block;
                            padding-left: 25px;
                            font-size: 15px;
                            line-height: 22px;
                            letter-spacing: normal;
                        }
                    }
                }
            }
        }

        & .s-list2 {
            margin-bottom: 50px;

            & > .title {
                font-family: var(--font2);
                font-size: 18px;
                font-weight: 500;
                line-height: 27px;
                letter-spacing: normal;
                text-align: left;
                margin-bottom: 30px;
            }

            & li {
                margin-bottom: 30px;
                position: relative;

                & span {
                    &:first-child {
                        position: absolute;
                        font-size: 15px;
                        line-height: 22px;
                        letter-spacing: normal;
                        margin-right: 10px;
                        top: -1px;
                        left: 0;
                    }

                    &:nth-child(2) {
                        font-size: 15px;
                        line-height: 22px;
                        letter-spacing: normal;
                        padding-left: 29px;
                        display: block;
                    }

                    &:nth-child(3) {
                        display: block;
                        padding-left: 25px;
                        font-size: 15px;
                        line-height: 22px;
                        letter-spacing: normal;
                    }

                    & a {
                        font-size: 15px;
                        line-height: 22px;
                        color: var(--text-point-color);
                        text-decoration: underline;
                    }
                }
            }
        }

        & .s-table {
            & > .title {
                display: block;
                font-family: var(--font2);
                font-size: 18px;
                font-weight: 500;
                line-height: 27px;
                margin-bottom: 30px;

                &.title-sm {
                    font-size: 15px;
                }
            }

            & > .desc {
                font-size: 15px;
                line-height: 22px;
                margin-bottom: 14px;

                &.desc-md {
                    font-size: 14px;
                    margin-bottom: 30px;
                }
            }

            & > .table {
                margin-bottom: 50px;

                & thead {
                    & tr {
                        border-top: 1px solid #e3e4e8;
                        border-bottom: 1px solid #e3e4e8;

                        & th {
                            line-height: 50px;
                            height: 52px;
                            background-color: #f5f6f8;
                            font-family: var(--font2);
                            font-size: 15px;
                            font-weight: 500;
                            letter-spacing: -0.38px;
                            text-align: center;
                            color: var(--text-02);
                            border-bottom: 0;
                            border-right: 1px solid #e3e4e8;

                            &:last-child {
                                border-right: 0;
                            }
                        }
                    }
                }

                & tbody {
                    & tr {
                        & td {
                            font-size: 15px;
                            line-height: 50px;
                            letter-spacing: -0.38px;
                            text-align: center;
                            color: var(--text-02);
                            border-right: 1px solid #e3e4e8;
                            border-bottom: 1px solid #f5f6f8;

                            &:last-child {
                                border-right: 0;
                            }

                            &.version {
                                position: relative;

                                & span {
                                    position: absolute;
                                    top: 23px;
                                    left: 50%;
                                    transform: translateX(-50%);
                                }
                            }

                            &.text {
                                position: relative;

                                & .title {
                                    position: absolute;
                                    font-family: var(--font2);
                                    font-size: 15px;
                                    font-weight: 500;
                                    line-height: 22px;
                                    letter-spacing: -0.38px;
                                    color: var(--text-02);
                                    top: 24px;
                                    left: 24px;
                                }

                                & .item {
                                    position: relative;
                                    display: block;

                                    & .num {
                                        display: inline-block;
                                        position: absolute;
                                    }

                                    & .desc {
                                        display: block;
                                        position: absolute;
                                        font-size: 15px;
                                        line-height: 25px;
                                        color: var(--text-02);
                                    }
                                }
                            }
                        }

                        &:last-child {
                            & td {
                                border-bottom: 1px solid #e3e4e8;
                            }
                        }
                    }
                }
            }

            & .t-table {
                margin-bottom: 150px;

                & .row {
                    padding: 0;
                    margin: 0;

                    &:first-child {
                        border-top: 1px solid #e3e4e8;

                        & .col {
                            padding: 0;
                            margin: 0;
                            flex-basis: initial;

                            & > span {
                                display: block;
                                height: 52px;
                                background-color: #f5f6f8;
                                font-family: var(--font2);
                                line-height: 50px;
                                font-size: 15px;
                                font-weight: 500;
                                letter-spacing: -0.38px;
                                text-align: center;
                                color: var(--text-02);
                                border-bottom: 0;
                                border-right: 1px solid #e3e4e8;
                            }

                            &.col-20 {
                                width: 18%;
                            }

                            &.col-40 {
                                width: 41%;
                            }
                            &:last-child {
                                & > span {
                                    border-right: 0;
                                }
                            }
                        }
                    }

                    &:nth-child(2) {
                        & .col {
                            padding: 0;
                            margin: 0;
                            flex-basis: initial;
                            border-right: 1px solid #e3e4e8;
                            border-bottom: 1px solid #e3e4e8;
                            border-bottom: 1px solid #e3e4e8;

                            &:last-child {
                                border-right: 0;
                            }

                            & .version {
                                display: block;
                                font-size: 15px;
                                line-height: 22px;
                                text-align: center;
                                color: var(--text-02);
                                padding-top: 22px;
                            }

                            & .text {
                                padding-top: 23px;

                                & .title {
                                    font-family: var(--font2);
                                    font-size: 15px;
                                    font-weight: 500;
                                    line-height: 22px;
                                    letter-spacing: -0.38px;
                                    text-align: left;
                                    padding-left: 24px;
                                    color: var(--text-02);
                                    margin-bottom: 20px;
                                }

                                & .box-item {
                                    & .item {
                                        position: relative;

                                        & .num {
                                            position: absolute;
                                            font-size: 15px;
                                            line-height: 22px;
                                            letter-spacing: normal;
                                            text-align: left;
                                            color: var(--text-02);
                                            left: 24px;
                                            top: -2px;
                                        }

                                        & .desc {
                                            display: block;
                                            padding-left: 49px;
                                            font-size: 15px;
                                            line-height: 22px;
                                            color: var(--text-02);
                                            margin-bottom: 20px;
                                            padding-right: 43px;
                                        }
                                    }
                                }
                            }

                            &.col-20 {
                                width: 18%;
                            }

                            &.col-40 {
                                width: 41%;
                            }
                        }
                    }
                }
            }

            &.t-case {
                & .table {
                    & thead {
                        & tr {
                            & th {
                                font-size: 13px;
                            }
                        }
                    }

                    & tbody {
                        & tr {
                            & td {
                                font-size: 13px;
                                vertical-align: top;
                                text-align: left;
                                padding: 24px;
                                line-height: 21px;
                                border-bottom: 1px solid #e3e4e8;
                            }
                        }
                    }
                }
            }
        }
    }
}

