/*
   s 리뉴얼 v.0.1 -- 2021.03.30
*/
.wrap {
    padding-top: 60px;
    color: var(--text-01);
}

.content-title {
    font-size: 20px;
    font-family: var(--font3);
    line-height: 29px;
    letter-spacing: -0.5px;
    text-align: center;
    margin-top: 4px;
    margin-bottom: 24px;
}

.btn-normal {
    display: inline-block;
    width: 100%;
    height: 50px;
    border-radius: 6px;
    border: solid 1px var(--text-01);
    text-align: center;
    font-family: var(--font2);
    font-size: 15px;
    font-weight: 500;
    line-height: 48px;
    letter-spacing: -0.38px;
    color: var(--text-01);

    &:hover, &:focus {
        color: var(--text-01);
    }
}

.btn-bg {
    display: inline-block;
    width: 120px;
    height: 50px;
    border-radius: 6px;
    background-color: var(--blurple);
    font-family: var(--font2);
    font-size: 15px;
    font-weight: 500;
    line-height: 50px;
    letter-spacing: -0.38px;
    text-align: center;
    color: var(--white);

    &:hover, &:focus {
        color: var(--white);
    }
}

.pagination {
    justify-content: center;
    align-items: center;
    margin-bottom: 40px;

    & .page-item {
        margin-right: 25px;

        &.first, &.prev, &.next, &.last {
            transform: translateY(-2px);
            width: 18px;
            height: 18px;
            background-size: cover;
        }

        &.first, &.next{
            margin-right: 10px;
        }

        &.first {
            background-image: url(../../img/renewal_v.0.1/btn-page-first.svg);
            margin-right: 10px;
        }

        &.prev {
            background-image: url(../../img/renewal_v.0.1/btn-page-pre.svg);
        }

        &.next {
            background-image: url(../../img/renewal_v.0.1/btn-page-next.svg);
            margin-left: -5px;
            margin-right: 20px;
        }

        &.last {
            background-image: url(../../img/renewal_v.0.1/btn-page-last.svg);
            margin-right: 0;
        }

        & .page-link {
            border: 0;
            border-radius: 0;
            padding: 0;
            min-width: auto;
            height: 22px;
            margin-left: 0;
            margin-right: 0;
            font-size: 15px;
            text-align: center;
            color: var(--text-03);
            background-color: transparent;

            &:focus {
                box-shadow: none;
            }
        }
        &.active {
            & .page-link {
                border: 0;
                color: var(--text-01);
                font-family: var(--font3);
                font-weight: bold;
                background: transparent;
            }
        }
    }
}

/* tablet */
@media (min-width: 767px) {
    .wrap {
        padding-top: 90px;
    }

    .content-title {
        font-size: 27px;
        line-height: 40px;
        letter-spacing: -0.68px;
        margin-top: 61px;
        margin-bottom: 50px;
    }

    .breadcrumb-wrap {
        width: 100%;
        height: 60px;
        border-bottom: 1px solid #f0f0f0;

        & .inner {
            padding-left: 20px;
        }

        & ul {
            width: 100%;
            height: 60px;
            display: flex;
            align-items: center;

            & li {
                position: relative;
                margin-right: 44px;

                &:last-child {
                    &::after {
                        content: none;
                    }
                }

                &::after {
                    content: '';
                    position: absolute;
                    right: -30px;
                    top: 50%;
                    transform: translateY(-50%);
                    width: 14px;
                    height: 14px;
                    background-image: url(../../img/renewal_v.0.1/ic-pagenav-arrow.svg);
                    background-size: cover;
                }

                &.home {
                    width: 22px;
                    height: 22px;
                }

                & a {
                    display: inline-block;
                    font-size: 16px;
                    line-height: 24px;
                    letter-spacing: -0.4px;
                }
            }

            & .icon-home {
                display: inline-block;
                width: 22px;
                height: 22px;
                background-image: url(../../img/renewal_v.0.1/ic-pagenav-home.svg);
                background-size: cover;
            }
        }
    }

    .btn-bg {
        width: 180px;
        height: 60px;
        font-size: 17px;
        line-height: 60px;
        letter-spacing: -0.42px;
    }
}

/* pc */
@media (min-width: 1060px) {
    .content-title {
        margin-top: 81px;
    }

    .breadcrumb-wrap {
        & .inner {
            position: relative;
            width: 1024px;
            margin: 0 auto;
        }
    }
}


/* header */
.menu-wrap {
    position: relative;
    width: 100%;
    height: 60px;
    background-color: #fff;

    & h1 {
        position: absolute;
        width: 52px;
        height: 22px;
        margin: 0;
        top: 19px;
        left: 16px;

        & .logo {
            display: block;
            width: 52px;
            height: 22px;
            background-image: url(../../img/renewal_v.0.1/logo.svg) !important;
            background-size: cover;
        }
    }

    & .menu-mobile {
        position: absolute;
        display: none;
        width: 100%;
        padding: 20px 0 25px;
        background-color: #fff;
        top: 60px;
        left: 0;

        & ul {
            & li {
                display: block;
                text-align: center;
                margin-bottom: 20px;

                & a {
                    font-family: var(--font2);
                    font-size: 17px;
                    font-weight: 500;
                    line-height: 25px;
                    letter-spacing: -0.85px;
                    color: var(--text-01);

                    &:active {
                        color: var(--blurple);
                    }
                }

                &.active {
                    & a {
                        color: var(--blurple);
                    }
                }

                &:last-child {
                    margin-bottom: 0;
                }
            }
        }

        &.open {
            display: block;
        }
    }

    & .btn-menu {
        position: absolute;
        width: 26px;
        height: 26px;
        top: 17px;
        right: 16px;
        background-image: url(../../img/renewal_v.0.1/btn-menu.svg);
        background-size: cover;
        transition: .2s;

        &.close {
            float: none;
            opacity: 1 !important;
            text-shadow: none;
            transition: .2s;
            background-image: url(../../img/renewal_v.0.1/btn-menu-close.svg);
        }
    }

    & .menu-pc {
        display: none;
    }
}

/* tablet */
