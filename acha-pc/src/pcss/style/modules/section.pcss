/* 이용 약관 동의서 */
.dropdown-wrap {
    margin-bottom: 27px;
    padding: 80px 20px 0;

    & .dropdown {
        & .dropdown-toggle {
            position: relative;
            width: 115px;
            height: 36px;
            line-height: 34px;
            border-radius: 4px;
            border: 1px solid #e2e3e6;
            background-color: #fff;
            padding: 0 12px;
            text-align: left;
            font-size: 13px;
            letter-spacing: -.33px;

            &:focus, &:hover, &:active {
                color: var(--text-01);
                box-shadow: none;
            }

            &::after {
                position: absolute;
                display: block;
                width: 18px;
                height: 18px;
                background-image: url("../../img/common/ico_arrow_down.png");
                background-size: cover;
                border: 0;
                right: 12px;
                top: 9px;
            }
        }

        & .dropdown-menu {
            max-height: 421px;
            overflow-y: scroll;
            min-width: auto;
            width: 115px;

            & .dropdown-item {
                font-size: 13px;
                line-height: 36px;
            }
        }
    }
}

.terms_of_service {
    padding: 0 20px 30px 20px;

    & .title {
        font-size: 16px;
        font-weight: bold;
        line-height: 29px;
        letter-spacing: -0.5px;
        margin-bottom: 30px;
    }

    & .title-lg {
        font-family: var(--font2);
        font-size: 18px;
        line-height: 27px;
        letter-spacing: -0.45px;
        color: var(--text-01);
        margin-bottom: 27px;
    }

    & .title-sm {
        font-family: var(--font2);
        font-size: 12px;
        line-height: 22px;
        letter-spacing: -0.38px;
        margin-bottom: 20px;
    }

    & .content {
        font-size: 12px;
        line-height: 23px;
        letter-spacing: -0.35px;
        margin-bottom: 20px;
    }

    & .color-grey {
        color: var(--text-02);
    }

    & .t-table {
        margin-bottom: 30px;

        & .table {
            & thead {
                & tr {
                    & th {
                        padding: 0 10px;
                        height: 30px;
                        font-family: var(--font2);
                        font-size: 13px;
                        color: var(--text-02);
                        line-height: 21px;
                        letter-spacing: -.33px;
                        border-bottom: 1px solid #dee2e6;
                    }
                }
            }

            & tbody {
                & tr {
                    & td {
                        padding: 10px;
                        line-height: 21px;
                        font-size: 13px;
                        font-family: var(--font1);
                        color: var(--text-02);
                        vertical-align: top;
                        text-align: left;

                        &.font-medium {
                            font-family: var(--font2);
                            color: var(--text-01);
                        }
                    }
                }

                &.font-small {
                    & tr {
                        & td {
                            font-size: 11px;
                        }
                    }
                }
            }
        }
    }
}

/* tablet */
@media (min-width: 767px) {
    .dropdown-wrap {
        padding: 100px 20px 0;
        margin: 0 auto;

        & .dropdown {
            margin-bottom: 50px;

            & .dropdown-toggle {
                width: 150px;
                height: 42px;
                line-height: 40px;
                border-radius: 2px;
                font-size: 16px;
                letter-spacing: normal;

                &::after {
                    width: 26px;
                    height: 26px;
                    right: 12px;
                    top: 9px;
                }
            }

            & .dropdown-menu {
                max-height: 421px;
                overflow-y: scroll;
                min-width: auto;
                width: 150px;

                & .dropdown-item {
                    font-size: 16px;
                    line-height: 42px;
                }
            }
        }
    }

    .terms_of_service {
        padding: 0 20px 30px 20px;

        & .title {
            font-size: 20px;
            font-family: var(--font2);
            font-weight: 500;
            line-height: 28px;
            margin-bottom: 25px;
        }

        & .title-lg {
            font-size: 22px;
            line-height: 27px;
        }

        & .title-sm {
            font-size: 15px;
            line-height: 22px;
            margin-bottom: 20px;
        }

        & .content {
            font-size: 16px;
            line-height: 26px;
        }

        & .t-table {
            & .table {
                & tbody {
                    & tr {
                        & td {
                            font-size: 14px;
                        }
                    }
                }
            }
        }
    }
}

/* pc */
@media (min-width: 1060px) {
    .dropdown-wrap {
        width: 1060px;
        padding: 150px 0 0;
    }

    .terms_of_service {
        padding: 0 0 30px 0;
        width: 1060px;
        margin: 0 auto;

        & .title-lg {
            font-size: 32px;
            line-height: 62px;
            margin-bottom: 20px;
        }

        & .content {
            font-size: 15px;
            line-height: 25px;
            margin-bottom: 30px;
        }

        & .t-table {
            & .table {
                & thead {
                    & tr {
                        & th {
                            background-color: #f5f6f8;
                            padding: 15px 10px;
                            text-align: center;
                            font-size: 15px;
                            font-weight: 500;
                            font-family: var(--font2);
                        }
                    }
                }

                & tbody {
                    & tr {
                        & td {
                            font-size: 14px;
                        }
                    }
                }
            }
        }
    }
}


.font-medium {
    font-family: var(--font2);
    color: var(--text-01);
}

.color-grey {
    color: var(--text-02);
}
