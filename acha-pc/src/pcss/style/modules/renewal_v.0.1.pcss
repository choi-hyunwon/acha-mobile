                padding: 0 10px;
                background-color: #f7f8fc;
                border-bottom: 1px solid #e3e4e8;
            }
            & .detail-date {
                width: 100%;
                padding: 13px 10px;
                border-bottom: 1px solid #e3e4e8;

                & > div {
                    margin-bottom: 4px;

                    &:last-child {
                        margin-bottom: 0;
                    }
                }

                & .tit {
                    position: relative;
                    font-size: 14px;
                    letter-spacing: -0.35px;
                    color: var(--text-02);
                    margin-right: 21px;

                    &::after {
                        content: '';
                        position: absolute;
                        right: -11px;
                        top: 50%;
                        transform: translateY(-50%);
                        width: 1px;
                        height: 12px;
                        background-color: var(--text-04);
                    }
                }
                & .date {
                    font-size: 14px;
                    letter-spacing: -0.35px;
                    color: var(--text-02);
                }
            }
            & .detail-body {
                width: 100%;
                padding: 20px 0;

                & .img {
                    width: 100%;
                    height: auto;

                    & img {
                        width: 100%;
                        height: 100%;
                    }
                }
                & .text {
                    font-size: 15px;
                    line-height: 25px;
                    letter-spacing: -0.38px;
                    padding: 0 10px;
                    height: 280px;

                    &.scroll {
                        overflow-y: auto;
                    }
                }
                &.finished {
                    & .img {
                        position: relative;

                        &::before {
                            content: '';
                            position: absolute;
                            width: 100%;
                            height: 100%;
                            left: 0;
                            top: 0;
                            background-color: rgba(0,0,0,.5);
                            z-index: 2;
                        }

                        &::after {
                            content: '이벤트가 종료되었습니다.';
                            position: absolute;
                            width: 205px;
                            height: 205px;
                            line-height: 30px;
                            font-family: var(--font1);
                            font-size: 22px;
                            letter-spacing: -1.1px;
                            text-align: center;
                            color: #fff;
                            background-color: rgba(0, 0, 0, 0.5);
                            left: 50%;
                            top: 50%;
                            transform: translate(-50%, -50%);
                            border-radius: 50%;
                            z-index: 3;
                            padding: 72px 33px 0;
                            word-break: keep-all;
                        }
                    }
                }
            }
        }
    }

    & .btn-wrap {
        text-align: center;
    }

    & .list {
        width: 100%;
        border-top: 1px solid var(--text-01);
        border-bottom: 1px solid var(--text-04);
        margin-bottom: 40px;

        & .item {
            width: 100%;
            border-bottom: 1px solid #e3e4e8;
            padding: 20px 8px;

            &:last-child {
                border-bottom: 0;
            }

            & a {
                display: block;
                & .title {
                    display: block;
                    font-family: var(--font2);
                    font-size: 15px;
                    font-weight: 500;
                    line-height: 23px;
                    letter-spacing: -0.38px;
                    color: var(--text-01);
                    max-height: 46px;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                    margin-bottom: 6px;
                }
                & .info {
                    display: flex;
                    width: 100%;
                    height: 20px;
                    align-items: center;
                    margin-bottom: 4px;

                    &:last-child {
                        margin-bottom: 0;
                    }

                    & .tit {
                        position: relative;
                        font-size: 14px;
                        letter-spacing: -0.35px;
                        color: var(--text-02);
                        margin-right: 21px;

                        &::after {
                            content: '';
                            position: absolute;
                            right: -11px;
                            top: 50%;
                            transform: translateY(-50%);
                            width: 1px;
                            height: 12px;
                            background-color: var(--text-04);
                        }
                    }
                    & .date {
                        font-size: 14px;
                        letter-spacing: -0.35px;
                        color: var(--text-02);
                    }
                }
            }
        }
    }
}

